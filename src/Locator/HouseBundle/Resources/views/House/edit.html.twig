{% extends "::layout.html.twig" %}

{% block menu %}
  {% render "LocatorHouseBundle:House:menu" %}
{% endblock %}

{% block body %}
        <header>
          <hgroup>
            <h1>{{ 'House edit'|trans }}</h1>
            <h2>{{ entity }}</h2>
          </hgroup>
          <aside>
            <ul>
                <li>
                    <a href="{{ path('house') }}">
                        <i class="icon-list"></i>
                    </a>
                </li>
            </ul>
          </aside>
        </header>

        <form class="body form-horizontal" action="{{ path('house_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
          <div class="main main-form">
            {{ form_widget(edit_form) }}
          </div>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Edit</button>
          </div>
        </form>
{% endblock %}