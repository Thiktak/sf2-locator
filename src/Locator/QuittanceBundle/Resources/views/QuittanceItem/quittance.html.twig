                <table class="table table-bordered">
                  <thead>
                    <tr style="padding: 1px">
                      <th>Intitulé</th>
                      <th class="text-right span2">Prix</th>
                      <th class="text-center span1">
                        <ul class="actions">
                          <li class="active">
                            <a href="{{ path('quittanceitem_new', {qid: entity.id}) }}" data-modal="modalForm" class="btn btn-small btn-success">
                              <i class="icon-plus"></i>
                            </a>
                          </li>
                        </ul>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for item in entity.items %}
                    <tr>
                      <td>
                        {% if item.tenant %}<span class="label label-warning pull-right">Locataire</span>{% endif %}
                        {{ item.header }}
                      </td>
                      <td class="text-right">{{ '%.2f'|format(item.price) }} €</td>
                      <td>
                        <ul class="actions">
                          <li>
                            <a href="{{ path('quittanceitem_edit', {id: item.id}) }}" data-modal="modalForm">
                              <i class="icon-edit"></i>
                            </a>
                          </li>
                          <li>
                            <a href="{{ path('quittanceitem_delete', {id: item.id}) }}">
                              <i class="icon-remove"></i>
                            </a>
                          </li>
                        </ul>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th colspan="3">
                        <div class="text-right">Total : {{ '%.2f'|format(entity.total) }} €</div>
                      </th>
                    </tr>
                  </tfoot>
                </table>          